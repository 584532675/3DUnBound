<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- 指定圆角矩形的4个圆角的半径 -->
    <corners android:topLeftRadius="3dp"
        android:topRightRadius="3dp"
        android:bottomLeftRadius="3dp"
        android:bottomRightRadius="3dp"
        />
    <!-- 指定边框线条的宽度和颜色 -->
    <stroke android:width="1dp" android:color="#ff7d53"/>

    <!-- 指定使用渐变背景色，使用sweep类型的渐变，颜色从红色到绿色再到蓝色 -->
    <gradient android:startColor="#ff4948"
        android:centerColor="#ff5f53"
        android:endColor="#ff7d53"
        android:angle="270"
        android:centerX="0.5"
        android:centerY="0.5"

        />
</shape>