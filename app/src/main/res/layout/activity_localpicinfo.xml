<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unbounded.video.com.unbounded.video.activity.OnlinePicInfoActivity">

    <RelativeLayout
        android:layout_width="1px"
        android:layout_height="1px">
        <com.unbounded.video.utils.facedetector.CameraView
            android:id="@+id/onlinepicinfo_cameraview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="visible"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/word_f_345"
        >
        <com.stereo.GlSurfaceView.PictureGLSurfaceView
            android:id="@+id/movie_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/ivpic_eyes_tacking"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/eyes_not_tracking"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/localpicinfo_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/defaultloading_fourthreeimg"
            android:background="@color/word_f_5"
            android:scaleType="fitCenter"
            android:visibility="gone"/>
        <!-- title -->
        <RelativeLayout
            android:id="@+id/localpicinfo_titlerela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/lay_12"
            android:paddingRight="@dimen/lay_12"
            android:paddingTop="23dp"
            android:paddingBottom="23dp"
            android:background="@drawable/gradientdrawable"
            android:visibility="gone"
            >
            <Button
                android:id="@+id/localpicinfo_backbtn"
                android:layout_width="@dimen/lay_28"
                android:layout_height="@dimen/lay_28"
                android:layout_centerVertical="true"
                android:background="@mipmap/whitebackbtn"
                />
            <TextView
                android:id="@+id/localpicinfo_formattv"
                android:layout_width="72dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@drawable/redee2gray_textcolor"
                android:textSize="@dimen/font_14"
                android:text="图片格式"
                android:gravity="center"
                android:background="@drawable/yuanbordtranredee_border"
                android:paddingTop="1dp"
                />
            <TextView
                android:id="@+id/localpicinfo_modeltv"
                android:layout_width="42dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/localpicinfo_formattv"
                android:layout_marginRight="@dimen/lay_10"
                android:textColor="@drawable/redee2gray_textcolor"
                android:textSize="@dimen/font_14"
                android:text="模式"
                android:gravity="center"
                android:background="@drawable/yuanbordtranredee_border"
                android:paddingTop="1dp"
                />
            <TextView
                android:id="@+id/localpicinfo_nametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/localpicinfo_modeltv"
                android:layout_marginRight="@dimen/lay_2"
                android:layout_toRightOf="@+id/localpicinfo_backbtn"
                android:layout_marginLeft="@dimen/lay_10"
                android:textColor="@color/white"
                android:textSize="@dimen/font_15"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/localpicinfo_uploadbtn"
            android:layout_width="@dimen/lay_56"
            android:layout_height="@dimen/lay_56"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/lay_12"
            android:background="@mipmap/picuploadbtn1"
            />



    </RelativeLayout>
    </RelativeLayout>

</FrameLayout>
