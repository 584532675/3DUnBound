<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/lay_10"
    android:background="@color/white"
    tools:context="com.unbounded.video.com.unbounded.video.activity.VideosActivity">

    <!-- 图片 -->
    <RelativeLayout
        android:id="@+id/videolocalitem_imgrela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/videolocalitem_imgiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/word_six_d"
            />
        <ImageView
            android:id="@+id/videolocalitem_playiv"
            android:layout_width="@dimen/lay_40"
            android:layout_height="@dimen/lay_40"
            android:layout_centerInParent="true"
            android:src="@mipmap/whiteplaybtn1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/videolocalitem_btnsrela"
        android:layout_width="@dimen/lay_64"
        android:layout_height="@dimen/lay_25"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/videolocalitem_uploadbtn"
            android:layout_width="@dimen/lay_64"
            android:layout_height="@dimen/lay_25"
            android:background="@drawable/buttonbtn_selector"
            android:text="@string/upload"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_13"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/videolocalitem_cancleuploadbtn"
            android:layout_width="@dimen/lay_64"
            android:layout_height="@dimen/lay_25"
            android:background="@drawable/buttonbtn_selector"
            android:text="@string/cancleupload"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/font_13"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/videolocalitem_imgrela"
        android:layout_marginLeft="@dimen/lay_10"
        >
        <TextView
            android:id="@+id/videolocalitem_nametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/lay_2"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/videolocalitem_nametv"
            android:layout_marginTop="@dimen/lay_3"
            >
            <TextView
                android:id="@+id/videolocalitem_timeAndsizetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/word_six_eight"
                android:textSize="@dimen/font_12"
                />
            <TextView
                android:id="@+id/videolocalitem_totalsizetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/word_six_eight"
                android:textSize="@dimen/font_12"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/videolocalitem_flagtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/word_six_eight"
                android:textSize="@dimen/font_12"
                android:visibility="gone"
                />
        </RelativeLayout>

    </RelativeLayout>



    <ProgressBar
        android:id="@+id/videolocalitem_progress1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/videolocalitem_imgrela"
        android:layout_marginLeft="@dimen/lay_10"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/downloadprogressbar_styles"
        android:visibility="gone"
        />


</RelativeLayout>
