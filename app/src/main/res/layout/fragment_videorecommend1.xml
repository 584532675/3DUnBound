                    <RelativeLayout
                        android:id="@+id/videorecommend_line1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/lay_1px"
                        android:layout_below="@+id/next_more"
                        android:layout_marginTop="10dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="12dp"
                            android:background="@color/word_e_7"
                            />
                    </RelativeLayout>
                    <!-- 今日热播 -->
                    <!--rjz 修改，去掉热播影片 3D无界不需要  visibile gone start-->
                    <RelativeLayout
                        android:id="@+id/videorecommend_hotrela"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/videorecommend_line1"
                        android:background="@color/white"
                        android:visibility="gone"
                        android:paddingLeft="12dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textColor="@color/word_six_one"
