                            />
                        <ImageView
                            android:id="@+id/videorecommend_hottag"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="@dimen/lay_12"
                            android:layout_marginBottom="@dimen/lay_12"
                            android:layout_toLeftOf="@+id/videorecommend_hotmoretv"
                            android:src="@mipmap/redfresh"
                            android:layout_centerVertical="true"
                            android:visibility="visible"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/videorecommend_hotrecyclerViewrela"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/videorecommend_hotrela"
                        android:background="@color/white"
                        android:visibility="gone"
                        >

                        <FrameLayout
                            android:id="@+id/videorecommend_hotrecyclerViewcontainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/videorecommend_hotrecyclerView2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/videorecommend_hotrecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                        </FrameLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/videorecommend_line2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/lay_1px"
                        android:layout_below="@+id/videorecommend_hotrecyclerViewrela"
                        android:background="@color/white"
                        android:visibility="gone"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/word_e_7"
                            android:layout_marginLeft="12dp"
                            />
                    </RelativeLayout>
                    <!--rjz 修改，去掉热播影片 3D无界不需要 visibile gone end -->
                    <!-- 最新影片 -->
                    <RelativeLayout
                        android:id="@+id/videorecommend_newrela"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/videorecommend_line2"
                        android:background="@color/white"
                        android:paddingLeft="12dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textColor="@color/word_six_one"
                            android:text="@string/word_newest_video"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            />
                        <ImageView
                            android:id="@+id/videorecommend_newtag"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_marginTop="@dimen/lay_12"
                            android:layout_marginBottom="@dimen/lay_12"
                            android:src="@mipmap/redrightiv"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/videorecommend_newmoretv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/videorecommend_newtag"
                            android:layout_marginRight="-5dp"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textColor="@color/redff"
                            android:textSize="@dimen/font_13"
                            android:text="@string/word_more"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/videorecommend_newrecyclerViewrela"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/videorecommend_newrela"
                        android:background="@color/white"
                        >
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/videorecommend_newrecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            />
                    </RelativeLayout>


                </RelativeLayout>
            </ScrollView>
        </com.unbounded.video.view.banner.ui.BannerSwipeRefreshLayout>

    </RelativeLayout>
</RelativeLayout>