                            <RelativeLayout
                                android:id="@+id/videorecommend_btnsiv7rela"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/videorecommend_btnsline4"
                                >
                                <ImageView
                                    android:id="@+id/videorecommend_btnsiv7"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@mipmap/mainyxiv"
                                    />
                                <TextView
                                    android:id="@+id/videorecommend_btnstv7"
                                    android:layout_below="@+id/videorecommend_btnsiv7"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/word_three_four"
                                    android:textSize="@dimen/font_13"
                                    android:text="@string/word_youxi"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/image_recommend_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@id/videorecommend_gallerybanner">
                        <!--大电影图-->
                        <FrameLayout
                            android:id="@+id/big_movie_iv"
                            android:layout_width="@dimen/image_movie_width"
                            android:layout_height="@dimen/image_height"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:layout_width="@dimen/image_movie_width"
                                android:layout_height="@dimen/image_height"
                                android:scaleType="fitXY"
                                android:src="@mipmap/big_movie" />

                            <TextView
                                android:id="@+id/big_movie_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center"
                                android:text="大电影"
                                android:visibility="gone"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/movie_tv_size" />
                        </FrameLayout>
                        <!--新片场-->
                        <FrameLayout
                            android:id="@+id/new_movie_iv"
                            android:layout_width="@dimen/image_movie_width"
                            android:layout_height="@dimen/image_height"
                            android:layout_below="@id/big_movie_iv"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="@dimen/image_movie_width"
                                android:layout_height="@dimen/image_height"
                                android:scaleType="fitXY"
                                android:src="@mipmap/new_movie" />

                            <TextView
                                android:id="@+id/new_movie_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center"
                                android:text="新片场"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/movie_tv_size" />
                        </FrameLayout>
                        <!--推荐-->
                        <FrameLayout
                            android:id="@+id/recommend_video_iv"
                            android:layout_width="@dimen/fashion_show_width"
                            android:layout_height="@dimen/fashion_show_height"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@id/big_movie_iv">

                            <ImageView

                                android:layout_width="@dimen/fashion_show_width"
                                android:layout_height="@dimen/fashion_show_height"
                                android:scaleType="fitXY"
                                android:src="@mipmap/recommend_video" />

                            <TextView
                                android:id="@+id/fashion_show_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center"
                                android:text="时尚秀"
                                android:textColor="#ffffff"
                                android:visibility="gone"
                                android:textSize="@dimen/movie_tv_size" />
                        </FrameLayout>
                        <!--短视频-->
                        <FrameLayout
                            android:id="@+id/short_video_iv"
                            android:layout_width="@dimen/image_movie_width"
                            android:layout_height="@dimen/image_height"
                            android:layout_below="@id/new_movie_iv"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="@dimen/image_movie_width"
                                android:layout_height="@dimen/image_height"
                                android:scaleType="fitXY"
                                android:src="@mipmap/short_video" />

                            <TextView
                                android:id="@+id/short_video_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center"
                                android:text="短视频"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/movie_tv_size" />
                        </FrameLayout>
                        <!--时尚秀-->
                        <FrameLayout
                            android:id="@+id/fashion_show_iv"
                            android:layout_width="@dimen/fashion_show_width"
                            android:layout_height="110dp"
                            android:layout_below="@id/recommend_video_iv"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:visibility="gone"
                            android:layout_toRightOf="@id/short_video_iv">

                            <ImageView
                                android:layout_width="@dimen/fashion_show_width"
                                android:layout_height="110dp"
                                android:scaleType="fitXY"
                                android:src="@mipmap/recommend_video" />

                            <TextView
                                android:id="@+id/recommend_video_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center"
                                android:text="推荐"
                                android:visibility="gone"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/movie_tv_size" />
                        </FrameLayout>
                    </RelativeLayout>
                    <LinearLayout
