                            <TextView
                                android:id="@+id/videorecommend_btnsline2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/videorecommend_btnsiv4rela"
                                android:layout_centerVertical="true"
                                android:background="@color/white"/>
                            <!-- 3 -->
                            <RelativeLayout
                                android:id="@+id/videorecommend_btnsiv3rela"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/videorecommend_btnsline2"
                                >
                                <ImageView
                                    android:id="@+id/videorecommend_btnsiv3"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@mipmap/mainzyiv"
                                    />
                                <TextView
                                    android:id="@+id/videorecommend_btnstv3"
                                    android:layout_below="@+id/videorecommend_btnsiv3"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/word_three_four"
                                    android:textSize="@dimen/font_13"
                                    android:text="@string/word_zongyi"/>
                            </RelativeLayout>
                        </RelativeLayout>

                        <!-- 下面4个 -->
                        <RelativeLayout
                            android:id="@+id/videorecommend_btnslinear2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/videorecommend_btnslinear1"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            >
                            <!-- 1 -->
                            <RelativeLayout
                                android:id="@+id/videorecommend_btnsiv5rela"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >
                                <ImageView
                                    android:id="@+id/videorecommend_btnsiv5"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@mipmap/mainfjiv"
                                    />
                                <TextView
                                    android:id="@+id/videorecommend_btnstv5"
                                    android:layout_below="@+id/videorecommend_btnsiv5"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/word_three_four"
                                    android:text="@string/word_fengjing"
                                    android:textSize="@dimen/font_13"
                                    />
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/videorecommend_btnsline3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/videorecommend_btnsiv5rela"
                                android:layout_centerVertical="true"
                                android:background="@color/white"/>
                            <!-- 2 -->
                            <RelativeLayout
                                android:id="@+id/videorecommend_btnsiv6rela"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/videorecommend_btnsline3"
                                >
                                <ImageView
                                    android:id="@+id/videorecommend_btnsiv6"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@mipmap/mainmviv"
                                    />
                                <TextView
                                    android:id="@+id/videorecommend_btnstv6"
                                    android:layout_below="@+id/videorecommend_btnsiv6"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/word_three_four"
                                    android:textSize="@dimen/font_13"
                                    android:text="@string/word_meinv"/>
                            </RelativeLayout>
                            <!-- 4 -->
                            <RelativeLayout
                                android:id="@+id/videorecommend_btnsiv8rela"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                >
                                <ImageView
                                    android:id="@+id/videorecommend_btnsiv8"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@mipmap/mainqt"
                                    />
                                <TextView
                                    android:id="@+id/videorecommend_btnstv8"
                                    android:layout_below="@+id/videorecommend_btnsiv8"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/word_three_four"
                                    android:textSize="@dimen/font_13"
                                    android:text="@string/word_qita"/>
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/videorecommend_btnsline4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/videorecommend_btnsiv8rela"
                                android:layout_centerVertical="true"
                                android:background="@color/white"/>
