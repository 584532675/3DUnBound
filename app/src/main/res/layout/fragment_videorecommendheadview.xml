<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unbounded.video.activity.MineActivity">
    <!-- 上部广告栏 -->
    <com.unbounded.video.view.banner.Banner
        android:id="@+id/videorecommend_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:image_scale_type="fit_xy"
        />
    <TextView
        android:id="@+id/videorecommend_tv1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/videorecommend_banner"
        android:background="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/videorecommend_tv1"
        android:background="@color/white"/>
</RelativeLayout>