<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/lay_12"
    >
    <!-- 评论者头像 -->
    <RelativeLayout
        android:id="@+id/discussitem_toprela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/discussitem_headiv"
            android:layout_width="@dimen/lay_35"
            android:layout_height="@dimen/lay_35"
            android:layout_centerVertical="true"
            android:src="@mipmap/head_noimg"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/discussitem_nametv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/word_three_four"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/discussitem_timetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/threec_threenine"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/discussitem_contenttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/discussitem_toprela"
        android:layout_below="@+id/discussitem_toprela"
        android:layout_marginTop="@dimen/lay_8"
        android:textColor="@color/black"
        />
</RelativeLayout>
