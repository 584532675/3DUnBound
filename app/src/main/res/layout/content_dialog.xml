<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yuanjiaowhite_border"
     >

	<RelativeLayout
		android:id="@+id/content_rela"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
		android:padding="15dp"
		>
		<Button
			android:id="@+id/content_yesbtn"
			android:layout_width="88dp"
			android:layout_height="35dp"
			android:textColor="#fefefe"
			android:gravity="center"
			android:text="@string/sure_btn"
			android:textSize="13sp"
			android:background="@drawable/buttonbtn_selector"
			/>
	</RelativeLayout>

	<ScrollView
		android:id="@+id/content_scroll"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/content_rela"
		android:layout_marginTop="13dp"
		android:layout_marginLeft="@dimen/lay_20"
		android:layout_marginRight="@dimen/lay_20"
		>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<TextView
			android:id="@+id/content_tv1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:textColor="@color/word_six_two"
			/>
		<TextView
			android:id="@+id/content_tv2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/content_tv1"
			android:layout_marginTop="@dimen/lay_10"
			android:textColor="@color/word_six_seven"
			/>
		</RelativeLayout>
	</ScrollView>

</RelativeLayout>
