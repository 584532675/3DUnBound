<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unbounded.video.com.unbounded.video.activity.IntroduceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/word_f_345"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/introduce_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/lay_10"
            />

        <LinearLayout
            android:id="@+id/introduce_viewgroup"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/lay_60"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/introduce_point1"
                android:layout_width="@dimen/lay_20"
                android:layout_height="@dimen/lay_20"
                android:layout_gravity="top"
                android:src="@mipmap/select" />

            <ImageView
                android:id="@+id/introduce_point2"
                android:layout_width="@dimen/lay_20"
                android:layout_height="@dimen/lay_20"
                android:layout_gravity="top"
                android:src="@mipmap/unselect" />

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
