<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/word_f_7"
    tools:context="com.unbounded.video.com.unbounded.video.activity.OnlineVideoInfoActivity">

    <!-- 名称，简介点播数区域 -->
    <RelativeLayout
        android:id="@+id/onlinevideoinfo_rela1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/lay_12"
        android:paddingLeft="@dimen/lay_12"
        android:paddingRight="@dimen/lay_12"
        >
        <!-- 名称区域 -->
        <RelativeLayout
            android:id="@+id/onlinevideoinfo_namerela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/onlinevideoinfo_filmnametv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/lay_4"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:visibility="gone"
                android:textSize="@dimen/font_15"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/lay_4"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:text="@string/introduction"
                android:textSize="@dimen/font_15"
                />
        </RelativeLayout>

        <!-- 导演，演员，类型，上映时间区域 -->
        <RelativeLayout
            android:id="@+id/onlinevideoinfo_actorrela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/onlinevideoinfo_namerela"
            android:visibility="visible"
            >
            <!-- 评分，类型，上映时间 -->
            <RelativeLayout
                android:id="@+id/onlinevideoinfo_threelxrela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/lay_8"
                >
                <TextView
                    android:id="@+id/onlinevideoinfo_filmscoretv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/threea_three2"
                    android:textSize="@dimen/font_13"
                    />
                <TextView
                    android:id="@+id/onlinevideoinfo_line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/threea_three2"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/onlinevideoinfo_filmscoretv"
                    android:text="·"/>
                <TextView
                    android:id="@+id/onlinevideoinfo_filmtypetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/onlinevideoinfo_line1"
                    android:textColor="@color/threea_three2"
                    android:textSize="@dimen/font_13"
                    />
                <TextView
                    android:id="@+id/onlinevideoinfo_line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/threea_three2"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/onlinevideoinfo_filmtypetv"
                    android:text="·"/>
                <!-- 上映时间 -->
                <TextView
                    android:id="@+id/onlinevideoinfo_releaseertv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/onlinevideoinfo_line2"
                    android:textColor="@color/threea_three2"
                    android:textSize="@dimen/font_13"
                    />

            </RelativeLayout>

            <!-- 导演 -->
            <TextView
                android:id="@+id/onlinevideoinfo_directortv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/onlinevideoinfo_threelxrela"
                android:paddingTop="@dimen/lay_4"
                android:textColor="@color/threea_three2"
                android:text="@string/word_director"
                android:textSize="@dimen/font_13"
                />
            <!-- 主演 -->
            <TextView
                android:id="@+id/onlinevideoinfo_actortv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/onlinevideoinfo_directortv"
                android:paddingTop="@dimen/lay_4"
                android:textColor="@color/threea_three2"
                android:text="@string/word_performer"
                android:textSize="@dimen/font_13"
                />

        </RelativeLayout>


        <!-- 隐藏的简介区域 -->
        <RelativeLayout
            android:id="@+id/onlinevideoinfo_infomationrela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/onlinevideoinfo_actorrela"
            android:visibility="gone"
            android:paddingTop="@dimen/lay_10">
            <TextView
                android:id="@+id/onlinevideoinfo_infomationtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/threea_three2"
                android:textSize="@dimen/font_13"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/onlinevideoinfo_filmnameiv"
            android:layout_width="@dimen/lay_36"
            android:layout_height="@dimen/lay_36"
            android:src="@mipmap/main_setting_enter"
            android:layout_below="@id/onlinevideoinfo_infomationrela"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            />
        <!-- 播放次数，点赞区域 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/onlinevideoinfo_infomationrela"
            android:paddingTop="@dimen/lay_12"
            android:paddingBottom="@dimen/lay_12"
            android:orientation="horizontal"
            >
            <!-- 播放次数，点赞区域 -->
            <ImageView
                android:id="@+id/onlinevideoinfo_playcountiv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/playcountbtn1"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/onlinevideoinfo_playcounttv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/onlinevideoinfo_playcountiv"
                android:layout_marginLeft="@dimen/lay_8"
                android:textColor="@color/word_six_four"
                android:textSize="@dimen/font_12"
                android:visibility="gone"
                />
            <!-- 点赞数 -->
            <TextView
                android:id="@+id/onlinevideoinfo_zancounttv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/word_six_four"
                android:textSize="@dimen/font_12"
                android:text="0"
                android:visibility="gone"
                />
            <!-- 投诉 -->
            <ImageView
                android:id="@+id/onlinevideoinfo_tousuiv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:src="@mipmap/jubaobtn1"
                />
            <!-- 下载 -->
            <ImageView
                android:id="@+id/onlinevideoinfo_downloadbtn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/infodownbtn1"
                android:visibility="gone"
                />
            <!-- 点赞 -->
            <ImageView
                android:id="@+id/onlinevideoinfo_zancountiv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_toLeftOf="@+id/onlinevideoinfo_downloadbtn"
                android:layout_marginRight="25dp"
                android:src="@mipmap/zanbtn1"
                android:visibility="gone"
                />
            <!-- 收藏 -->
            <ImageView
                android:id="@+id/onlinevideoinfo_collectbtn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_toLeftOf="@+id/onlinevideoinfo_zancountiv"
                android:layout_marginRight="25dp"
                android:visibility="gone"
                android:src="@mipmap/infocollectbtn1"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/onlinevideoinfo_linetv1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_1px"
        android:layout_below="@+id/onlinevideoinfo_rela1"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/word_e_7"
            android:layout_marginLeft="12dp"
            />
    </RelativeLayout>

    <!-- 作者区域 -->
    <RelativeLayout
        android:id="@+id/onlinevideoinfo_authorrela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/onlinevideoinfo_linetv1"
        android:layout_marginTop="@dimen/lay_1px"
        android:background="@color/white"
        android:padding="@dimen/lay_12"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/onlinevideoinfo_authoriv"
            android:layout_width="@dimen/lay_50"
            android:layout_height="@dimen/lay_50"
            android:layout_centerVertical="true"
            android:src="@mipmap/head_noimg"
            />
        <TextView
            android:id="@+id/onlinevideoinfo_authornametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/onlinevideoinfo_authoriv"
            android:layout_marginLeft="@dimen/lay_8"
            android:textColor="@color/black"
            android:textSize="@dimen/font_15"
            />
        <TextView
            android:id="@+id/onlinevideoinfo_zuopnumtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/onlinevideoinfo_authoriv"
            android:layout_marginLeft="@dimen/lay_8"
            android:textColor="@color/threec_threenine"
            android:textSize="@dimen/font_14"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/onlinevideoinfo_fansnumtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/onlinevideoinfo_zuopnumtv"
            android:layout_marginLeft="@dimen/lay_10"
            android:textColor="@color/threec_threenine"
            android:textSize="@dimen/font_14"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/onlinevideoinfo_attentionbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/redee"
            android:textSize="@dimen/font_14"
            android:text="@string/Word_Attention"
            android:paddingTop="@dimen/lay_6"
            android:paddingBottom="@dimen/lay_6"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:background="@drawable/red_border"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/onlinevideoinfo_linetv2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_1px"
        android:layout_below="@+id/onlinevideoinfo_authorrela"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/word_e_7"
            android:layout_marginLeft="12dp"
            />
    </RelativeLayout>

    <!-- 观众点评 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/onlinevideoinfo_linetv2"
        android:layout_marginTop="@dimen/lay_1px"
        android:padding="@dimen/lay_12"
        >
        <TextView
            android:id="@+id/onlinevideoinfo_nodiscusswordtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Word_peoplediscuss"
            />
        <TextView
            android:id="@+id/onlinevideoinfo_nodiscusstv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/onlinevideoinfo_nodiscusswordtv"
            android:layout_marginTop="@dimen/lay_12"
            android:textColor="@color/word_six_two"
            android:textSize="@dimen/font_16"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:text="@string/Word_nodiscuss"
            />
    </RelativeLayout>

</RelativeLayout>
